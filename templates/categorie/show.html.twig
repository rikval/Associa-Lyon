{% extends 'base.html.twig' %}

{% block title %}Initiative index{% endblock %}

{% block body %}
<h1>Categorie</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Titre</th>
            <th>Description</th>
            <th>Voir</th>
    </thead>
    <tbody>
        <tr>
            <td>{{ categorie.id }}</td>
            <td>{{ categorie.titre }}</td>
            <td>{{ categorie.description }}</td>
        </tr>
    </tbody>

    {% for initiative in categorie.initiative %}
        {{ initiative.titre }}
        <br>
    {% endfor %}
</table>


{% endblock %}
